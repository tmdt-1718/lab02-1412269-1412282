<h1>Inbox</h1>
<div class="text-right">
  <button class="btn btn-primary">+ Message</button>
  <button class="btn btn-primary"><i class="fa fa-users" aria-hidden="true"></i></button>
  <button class="btn btn-primary"><i class="fa fa-share-square" aria-hidden="true"></i></button>
</div>
<hr>
<%@messages.each do |messag|%>
<%if messag.user_id != @user.id%>
<%namep = User.find_by(id: messag.user_id)%>
<div class="message-item">
  <div class="card">
    <div class="card-header">
      <p><b><%=namep.name%></b></p>
      <p><i><%=messag.created_at%></i></p>
    </div>
    <div class="card-body">
      <blockquote class="blockquote mb-0">
        <p><%=messag.body%></p>
        <footer class="blockquote-footer">Status
          <cite title="Source Title"><%if messag.read == false%>
            Not seen
            <%else%>
            Seen
            <%end%></cite>
        </footer>
      </blockquote>
    </div>
  </div>
</div>
<%end%>
<%end%>
